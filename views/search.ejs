<!DOCTYPE html>
<html>

  <%- include('head'); %>

  <body>
    
    <%- include('header'); %>
    
    <div class="container-fluid">
    
    	
    	<div class="col-12 text-center get_started empty">
			<% if ( typeof(error) != "undefined" ) { %>
				<p class="empty bold"><%=error + stringDate(date) %></p>  <!-- + stringDate(date) -->
				<a href="/index" class="btn btn-danger bold">Search again</a>
		 	<%	} %>
		</div>
		 
    	<% if ( typeof(result) != "undefined" ) { %>
    	
		 <div class="d-flex flex-column align-items-center">
		 
	 
			<div class="col-12 col-sm-6">

          <h1 class="titleForm">Tickets available on <%= date%></h1>
    
            <ul class="list-group">

              <% for (var i =0; i< result.length; i++ ) { %> 
                
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span class="bold"><%= result[i].fromcity %> / <%= result[i].tocity %> </span>
                  <div>
                    <span class="">train departure at: <%=result[i].hour %> </span>
                  </div>
                  <div >
                    <span class="bold"><%= result[i].price %>â‚¬&nbsp;</span>
                    <a href="/booking?position=<%=i%>" class="btn btn-danger">OK</a>
                  </div>
                </li>
              <% } %>   

            </ul>
          
			</div>
			 
		 </div>
		<% } %> 
    </div> <!-- close container -->

    <%- include('footer'); %>  

  </body>
</html>

